<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="tests/bootstrap.php" colors="true">
    <php>
        <var name="db_dsn" value="mysql:dbname=$MYSQL_DATABASE:$MYSQL_PORT;host=$MYSQL_HOST"/>
        <var name="db_username" value="$MYSQL_USER"/>
        <var name="db_password" value="$MYSQL_PASSWORD"/>
    </php>

    <testsuites>
        <testsuite name="[MyApplication] Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./tests</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
